<odoo>
    <template id='frontend_mirror_odometers'>
        <t>
            <div id="odometer" style="z-index:101; position:absolute; bottom:0px; height:50px; width:300px; right:0px;  ">
                <div id="distance" style="z-index:112;">000000000</div>
                <div id="date" style="z-index:112;">0000-00-00</div>
                <div id="time" style="z-index:112;">00:00</div>

                <div id="speed" style="z-index:110;">
                    <t t-call="gpsmap.frontend_odometer_speed"/>         
                </div>
                <div id="batery" style="z-index:100; overflow:hidden; position:absolute; bottom:0px; right:300px; width:250px; height:180px;">
                    <t t-call="gpsmap.frontend_odometer_batery"/>                     
                </div>

                <div id="gas" style="z-index:100; overflow:hidden; position:absolute; bottom:0px; right:0px; width:250px; height:180px;">
                    <t t-call="gpsmap.frontend_odometer_gas"/> 
                </div>                               
            </div>                

        </t>
    </template>
</odoo>
